    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "babel-preset-solid": "^1.9.9",
    "happy-dom": "^18.0.1",
    "supertest": "^7.1.4",
    "typescript": "^5.9.2",
    "unbuild": "^3.6.1",
    "vite-plugin-solid": "^2.11.8",
    "vitest": "^3.2.4",
    "vue": "^3.5.17",
    "zod": "^4.1.9"
